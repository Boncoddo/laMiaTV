<?xml version='1.0' encoding='utf-8'?>
<widget id="it.boncoddo.lamiatv" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>laMiaTV</name>
    <description>
        I canali dell'IPTV direttamente sul tuo televisore.
    </description>
    <author email="domenico@boncoddo.it" href="https://www.boncoddo.it">
        Domenico Boncoddo
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" subdomains="true" />
    <tizen:privilege name="http://tizen.org/privilege/internet" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
